@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Department Table</h6>
        </div>

        <div class="card-body">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" id="modalButton" data-toggle="modal" data-target="#exampleModal" data-tooltip="tooltip" data-placement="right" title="Register Employee Data">
                <i class="fas fa-plus"></i>
            </button>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="EmpTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>NIK</th>
                            <th>Email</th>
                            <th>Nama Lengkap</th>
                            <th>Username</th>
                            <th>Nama Departemen</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add New Department</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="regForm" class="needs-validation" novalidate>
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" required>
                                <div class="invalid-feedback">
                                    ada error bro!!!.
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                            <div class="form-group">
                                <label for="department">Example select</label>
                                <select class="form-control" id="department" name="department"></select>
                                @* <select class="js-example-basic-single js-states form-control" id="department" name="department"></select> *@
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" form="regForm" class="btn btn-primary" data-dismiss="modal" id="addEmp">Register</button>
                        <button type="submit" class="btn btn-warning" data-dismiss="modal" id="editEmp">Edit Employee</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Script {
    <script src="~/script/registerscript.js"></script>
}
